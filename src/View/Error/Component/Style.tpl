{{literal}}

html, body {
    margin: 0;
    padding: 0;
}

body {
    background-color: rgba(33, 33, 33, 1);
    overflow: auto;
}

header {
    display: block;
    width: 100%;
    background-color: rgba(225, 33, 0, 1);
}

header h1 {
    padding: 0;
    margin-top: 25px;
    padding-left: 25px;
    padding-right: 25px;
    text-align: center;
    font-size: 32px;
    color: rgba(255, 255, 255, 1);
}

main {
    color: rgba(255, 255, 255, 1);
    padding-left: 25px;
    padding-right: 25px;
    width: calc(100% - 50px);
}

main ul {
    margin: 0;
}

